<div class="user_item <%= single ? 'single' : '' %>">
  <div class="user_image">
    <%= image_tag(user.photo) %>
  </div>
  <div class="user_details">
    <h2 class="user_name">
      <%= user.name %>
    </h2>
    <span class="user_counter">
      Number of posts: <%= user.posts_counter %>
    </span>
  </div>
</div>
